<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.careye.activity.LoginActivity">

    <TextView
        android:id="@+id/tv_login_title"
        android:text="CMS"
        android:textSize="@dimen/y128"
        android:layout_marginTop="@dimen/y40"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_login_team"
        android:text="Car-eye-team"
        android:textColor="@color/white"
        android:textSize="@dimen/y50"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_marginLeft="@dimen/x88"
        android:layout_marginRight="@dimen/x88"
        android:layout_below="@+id/tv_login_team"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText
            android:id="@+id/et_login_name"
            android:hint="用户名"
            android:textSize="@dimen/y35"
            android:background="@null"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54" />
        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_marginLeft="@dimen/x88"
        android:layout_marginRight="@dimen/x88"
        android:layout_below="@+id/ll_name"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_login_password"
            android:hint="密码"
            android:textSize="@dimen/y35"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54" />
        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/x455"
        android:layout_height="@dimen/y82"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y89"
        android:background="@drawable/bg_btn_others_selected_ux1"
        android:text="登录"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

</RelativeLayout>
